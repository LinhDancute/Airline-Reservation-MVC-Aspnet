@model App.Models.Airline.Airport

@{
    ViewData["Title"] = "Tạo sân bay";
}

<h1>@ViewData["Title"]</h1>
<h4>Airport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AirportName"></label>
                <input asp-for="AirportName" class="form-control" />
                <span asp-validation-for="AirportName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Classification"></label>
                <select asp-for="Classification"
                    asp-items="@Html.GetEnumSelectList<App.Models.Airline.Airport.AirportClassification>()"
                    class="form-control"></select>
                <span asp-validation-for="Classification" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách máy bay</a>
</div>

